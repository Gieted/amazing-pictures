rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /profiles/{profileId} {
      allow read: if true;
      allow write: if request.auth.uid == profileId;
    }

    match /pictures {
      allow list: if true;
      match /{pictureId} {
            allow read: if true;
            allow create: if request.auth.uid != null;
      }
    }
  }
}
