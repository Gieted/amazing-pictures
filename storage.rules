rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      match /profile-picture {
        allow read: if true;
        allow write: if request.auth.uid == userId;
      }
    }

    match /pictures {
      allow list: if true;
      match /{pictureId} {
        allow read: if true;
        allow create: if request.auth.uid != null;
      }
    }
  }
}
